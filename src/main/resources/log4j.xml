<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Use this appender to have logs go to STDOUT -->
	<appender
		name="Console"
		class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param
				name="ConversionPattern"
				value="%p %d{yyyy-MM-dd' 'HH:mm:ss.SSS} [%t] (%c{1}) %m%n" />
		</layout>
	</appender>

	<!-- Use this appender to have logs go to one big log file -->
	<appender
		name="File"
		class="org.apache.log4j.FileAppender">
		<param
			name="File"
			value="/tmp/depositor.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param
				name="ConversionPattern"
				value="%p %d{yyyy-MM-dd' 'HH:mm:ss.SSS} [%t] (%c{1}) %m%n" />
		</layout>
	</appender>

	<!-- Use this appender to have logs go to a rolling set of log files -->
	<appender
		name="RollingFile"
		class="org.apache.log4j.RollingFileAppender">
		<param
			name="File"
			value="/tmp/depositor.log" />
		<param
			name="MaxFileSize"
			value="20MB" />
		<param
			name="MaxBackupIndex"
			value="5" />
		<layout class="org.apache.log4j.PatternLayout">
			<param
				name="ConversionPattern"
				value="%p %d{yyyy-MM-dd' 'HH:mm:ss.SSS} [%t] (%c{1}) %m%n" />
		</layout>
	</appender>
	
	<logger name="org.apache">
		<level value="warn" />
		<appender-ref ref="Console" />
	</logger>
	
	<logger name="httpclient.wire">
		<level value="warn" />
		<appender-ref ref="Console" />
	</logger>
	
	<root>
		<priority value="DEBUG" />
		<appender-ref ref="Console" />
	</root>

</log4j:configuration>